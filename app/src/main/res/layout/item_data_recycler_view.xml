<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/data_image_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/shadow_small"/>

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello: World"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/titleTextSize"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.frenclub.practiceapplication.views.RoundedImageView
                android:id="@+id/name_image_view"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/shadow_small"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/name_tex_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/name_image_view"
                android:text="Sharif"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"/>

            <TextView
                android:id="@+id/time_passed_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2 hours ago"
                android:layout_centerVertical="true"
                android:textSize="@dimen/smallerSizeTex"/>
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>